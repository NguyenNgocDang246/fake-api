generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model endpoint_groups {
  id         Int         @id @default(autoincrement())
  project_id Int
  name       String      @db.VarChar(100)
  projects   projects    @relation(fields: [project_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  endpoints  endpoints[]
}

model endpoints {
  id                 Int             @id @default(autoincrement())
  endpoint_groups_id Int
  method             String          @db.VarChar(10)
  path               String          @db.VarChar(255)
  status_code        Int?            @default(200)
  response_body      Json?
  delay_ms           Int?            @default(0)
  endpoint_groups    endpoint_groups @relation(fields: [endpoint_groups_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model projects {
  id              Int               @id @default(autoincrement())
  user_id         Int
  name            String            @db.VarChar(100)
  description     String?
  created_at      DateTime?         @default(now()) @db.Timestamp(6)
  endpoint_groups endpoint_groups[]
  users           users             @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model users {
  id            Int        @id @default(autoincrement())
  email         String     @unique @db.VarChar(100)
  password      String     @db.VarChar(255)
  name          String     @db.VarChar(255)
  token_version  Int        @db.Integer @default(0)
  created_at    DateTime?  @default(now()) @db.Timestamp(6)
  projects      projects[]
}
